---
import BadgeTecnologie from "./BadgeTecnologie.astro";
import IconRowRigth from "./Icons/IconRowRigth.astro";

interface Props {
  url: string;
  title: string;
  description: string;
  jobTitle: string;
  details: string[];
  tecnologies: string[];
}

const { url, title, jobTitle, description, details, tecnologies } = Astro.props;
---

<div class="flex">
  <div class="w-1/2">
    <img
      class="rounded-2xl w-full h-52 object-cover object-top"
      src={url}
      alt=""
    />
  </div>
  <div class="flex flex-col w-1/2 p-3">
    <h3 class="text-secondary text-2xl font-bold text-left">{title}</h3>
    <h5 class="text-gray">{jobTitle}</h5>
    <p>{description}</p>
    <div>
      {
        details.map((detail) => (
          <div class="flex gap-2 text-xs text-zinc-400 mt-2">
            <IconRowRigth className="fill-zinc-400" />
            <span>{detail}</span>
          </div>
        ))
      }
    </div>
    <div class="flex gap-2">
      {tecnologies.map((tecnology) => <BadgeTecnologie name={tecnology} />)}
    </div>
    <a
      href="/work"
      class="mt-5 border-[1px] border-white text-white font-bold py-2 px-4 rounded-2xl"
      >Ver maÃÅs</a
    >
  </div>
</div>

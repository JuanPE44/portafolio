---
import ContainerSection from "./ContainerSection.astro";
---

<ContainerSection>
  <div class="w-full flex min-h-screen">
    <div class="w-1/2 min-h-screen flex flex-col gap-10 justify-center">
      <div class="flex flex-col gap-4">
        <p class="text-zinc-400">
          This is a starter template for a blog powered by
        </p>
        <div class="flex flex-col gap-3">
          <h1 class="text-white text-5xl font-bold">
            Desarrollador Frontend <span class="text-primary">React</span> & <span
              class="text-primary">Typescript</span
            >
          </h1>
          <h2 class="text-gray text-xl">
            Hola soy Juan. Diseño y programo cosas bellamente simples, y amo lo
            que hago
          </h2>
        </div>
      </div>
      <div class="flex gap-3">
        <a
          href="/work"
          class="bg-secondary text-bg font-bold py-2 px-4 rounded-2xl"
          >Trabajos</a
        >
        <a
          href="/about"
          class="border-[1px] border-white text-white font-bold py-2 px-4 rounded-2xl"
          >Sobre mi</a
        >
      </div>
    </div>

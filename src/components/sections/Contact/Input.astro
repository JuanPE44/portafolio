---
interface Props {
  name: string;
  type: "text" | "email" | "password" | null | undefined;
  placeholder: string;
  className?: string;
}
const { name, type, placeholder, className = "" } = Astro.props;
---

<input
  required
  type={type}
  name={name}
  placeholder={placeholder}
  class={`w-full py-2 px-4 text-white rounded-2xl border border-[#fff1] bg-gray-bg focus:outline-none focus:ring-2 focus:ring-zinc-600 ${className}`}
/>

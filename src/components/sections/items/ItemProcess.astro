---
import type { ItemData } from '@/data/itemsData';
import ProcessStep from './ProcessStep.astro';

interface Props {
  item: ItemData;
}

const { item } = Astro.props;
---

{item.process.length > 0 && (
  <div class="mb-16">
    <h2 class="text-4xl font-bold text-white/90 mb-8 flex items-center gap-3">
      <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-white/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
      </div>
      Proceso y aprendizajes
    </h2>
    
    <div class="space-y-6">
      {item.process.map((step) => (
        <ProcessStep step={step} />
      ))}
    </div>
  </div>
)}

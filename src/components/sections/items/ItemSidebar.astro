---
import type { ItemData } from '@data/itemsData';
import TechnologyBadge from './TechnologyBadge.astro';

interface Props {
  item: ItemData;
}

const { item } = Astro.props;

const categoryConfig = {
  work: {
    label: 'Trabajo'
  },
  project: {
    label: 'Proyecto'
  }
};

const currentCategory = categoryConfig[item.category];
---

<div class="bg-gray-bg border border-gray-600 rounded-2xl p-6 backdrop-blur-sm mb-8 sticky top-24 relative overflow-hidden group hover:border-primary/30 transition-colors duration-300">
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-secondary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  
  
  
  <div class="space-y-4 relative z-10">
    <div>
      <h4 class="text-sm font-medium text-gray-400 uppercase tracking-wide mb-1">Categoría</h4>
      <p class="text-white font-medium">{currentCategory.label}</p>
    </div>
    
    <div>
      <h4 class="text-sm font-medium text-gray-400 uppercase tracking-wide mb-1">Rol</h4>
      <p class="text-white">{item.role}</p>
    </div>
    
    {item.client && (
      <div>
        <h4 class="text-sm font-medium text-gray-400 uppercase tracking-wide mb-1">Cliente</h4>
        <p class="text-white">{item.client}</p>
      </div>
    )}
    
    <div>
      <h4 class="text-sm font-medium text-gray-400 uppercase tracking-wide mb-1">Duración</h4>
      <p class="text-white">{item.duration}</p>
    </div>
    
    <div>
      <h4 class="text-sm font-medium text-gray-400 uppercase tracking-wide mb-1">Estado</h4>
      <span class={`inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium ${
        item.status === 'completed' ? 'bg-green-500/20 text-green-300 border border-green-500/30' :
        item.status === 'in-progress' ? 'bg-yellow-500/20 text-yellow-300 border border-yellow-500/30' :
        'bg-gray-500/20 text-gray-300 border border-gray-500/30'
      }`}>
        <div class={`w-2 h-2 rounded-full ${
          item.status === 'completed' ? 'bg-green-400' :
          item.status === 'in-progress' ? 'bg-yellow-400' :
          'bg-gray-400'
        }`}></div>
        {item.status === 'completed' ? 'Completado' :
         item.status === 'in-progress' ? 'En progreso' :
         'Planeado'}
      </span>
    </div>
    
    <div class="pt-4 border-t border-gray-700">
      <div class="space-y-3">
        {item.links.demo && (
          <a 
            href={item.links.demo} 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-primary hover:text-secondary transition-colors group"
          >
            <svg class="w-4 h-4 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            {item.category === 'work' ? 'Ver sitio web' : 'Ver demo'}
          </a>
        )}
        
        {item.links.github && (
          <a 
            href={item.links.github} 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-primary hover:text-secondary transition-colors group"
          >
            <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Ver código
          </a>
        )}
        
        {item.links.linkedin && (
          <a 
            href={item.links.linkedin} 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-primary hover:text-secondary transition-colors group"
          >
            <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            Ver en LinkedIn
          </a>
        )}
      </div>
    </div>
  </div>
</div>

---
interface Props {
  category: 'work' | 'project';
  title: string;
}

const { category, title } = Astro.props;

const categoryConfig = {
  work: {
    backLink: '/#works',
    label: 'Trabajos'
  },
  project: {
    backLink: '/#projects', 
    label: 'Proyectos'
  }
};

const currentCategory = categoryConfig[category];
---

<nav class="mb-4">
  <ol class="flex items-center space-x-2 text-sm text-gray-400">
    <li><a href="/" class="hover:text-primary transition-colors">Inicio</a></li>
    <li class="flex items-center">
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <a href={currentCategory.backLink} class="hover:text-primary transition-colors">
        {currentCategory.label}
      </a>
    </li>
    <li class="flex items-center">
      <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <span class="text-white">{title}</span>
    </li>
  </ol>
</nav>

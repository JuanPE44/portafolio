---
interface Props {
  category: 'work' | 'project';
}

const { category } = Astro.props;

const categoryConfig = {
  work: {
    backLink: '/#works',
    backText: 'Volver a todos los trabajos'
  },
  project: {
    backLink: '/#projects',
    backText: 'Volver a todos los proyectos'
  }
};

const currentCategory = categoryConfig[category];
---

<section class="py-12 px-4 border-t border-gray-600">
  <div class="max-w-6xl mx-auto text-center">
    <a 
      href={currentCategory.backLink} 
      class="group inline-flex items-center gap-2 text-white/90 hover:text-primary transition-colors font-medium text-lg"
    >
      <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15 18-6-6 6-6"/>
      </svg>
      {currentCategory.backText}
    </a>
  </div>
</section>

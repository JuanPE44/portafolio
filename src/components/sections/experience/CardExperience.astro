---
import IconRowRigth from "@/components/icons/IconRowRigth.astro";
import IconCalendar from "@/components/icons/IconCalendar.astro";
import Circle from "@/components/ui/Circle.astro";
import ProjectModalContent from "@/components/ui/ProjectModalContent.astro";
import Modal from "@/components/ui/Modal.astro";

interface Details {
  image: string;
  title: string;
  company: string;
  dates: string;
  description: string;
  role: string[];
  technologies: string[];
  features: string[];
  results: string[];
  link: string;
}

interface Props {
  title: string;
  date: string;
  description: string;
  jobTitle: string;
  details: Details;
  id: string;
}

const { id, title, date, description, jobTitle, details } = Astro.props;
---

<div class="relative -left-[9px] flex gap-2">
  <Modal id={id}>
    <ProjectModalContent {...details} />
  </Modal>
  <Circle />
  <div class="flex flex-col lg:flex-row gap-10">
    <div class="flex flex-col lg:w-1/3">
      <h3 class="text-secondary text-2xl font-bold text-left">
        {title}
      </h3>
      <p class="text-white/90 italic mt-2">{jobTitle}</p>
      <div class="flex gap-2 text-xs text-zinc-400 mt-2">
        <IconCalendar className="fill-zinc-400" />
        <span>{date}</span>
      </div>
    </div>
    <div class="flex flex-col gap-3 flex-1">
      <p class="text-foreground-secondary">
        {description}
      </p>
      <button
        onclick={`toggleModal('${id}')`}
        class="text-primary font-bold flex cursor-pointer items-center hover:grayscale-25"
      >
        <span>Saber m√°s</span>
        <IconRowRigth />
      </button>
    </div>
  </div>
</div>

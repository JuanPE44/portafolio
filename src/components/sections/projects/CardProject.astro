---
import IconGithub from "@/components/icons/IconGithub.astro";
interface Props {
  title: string;
  urlDemo: string;
  urlGithub: string;
}
const { title, urlDemo, urlGithub } = Astro.props;
---

<div class="flex w-full flex-col gap-4">
  <div
    class="bg-surface  w-full flex items-center justify-between px-4 py-3 rounded-2xl border-color-border border-[1px]"
  >
    <h3 class="text-secondary text-xl md:text-3xl font-bold text-left">
      {title}
    </h3>
    <div class="flex gap-2 items-center">
      <a
        target="_blank"
        class="px-4 py-2 rounded-2xl bg-primary text-white/90 font-bold hover:scale-105 transition-[0.3s]"
        href={urlDemo}>Demo</a
      >
      <a
        target="_blank"
        href={urlGithub}
        class="flex gap-2 px-4 py-2 rounded-2xl bg-secondary text-background font-bold hover:scale-105 transition-[0.3s]"
      >
        <IconGithub className="fill-background" width="20" height="20" />
        <span>Codigo</span>
      </a>
    </div>
  </div>
  <div
    class="flex justify-center items-center bg-surface  rounded-2xl px-4 py-10 relative gap-4 border-[#fff1] border-[1px]"
  >
    <slot />
  </div>
</div>

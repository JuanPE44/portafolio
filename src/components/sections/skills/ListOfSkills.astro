---
import CardSkill from "./CardSkill.astro";
import { SKILLS } from "@/utils/constants"; // Asume que tienes las skills en constants
---

<section class="relative pb-4 md:pb-6 lista-card-skill">
  <div
    class="relative grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6"
  >
    {
      SKILLS.map((skill, index) => (
        <CardSkill title={skill.title} icon={skill.icon} index={index} />
      ))
    }
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Configurar estado inicial
    gsap.set(".card-skill", {
      y: 50,
      opacity: 0,
    });

    // Crear la animaci√≥n
    gsap.to(".card-skill", {
      y: 0,
      opacity: 1,
      duration: 0.6,
      stagger: 0.15,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".lista-card-skill",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none reverse",
      },
    });
  });
</script>

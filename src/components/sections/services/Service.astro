---
import ContainerSection from "@components/ui/ContainerSection.astro";
import SectionTitle from "@components/ui/SectionTitle.astro";
import ListOfServices from "@components/sections/services/ListOfServices.astro";
import IconExperience from "src/icons/IconExperience.astro";
import ServiceHero from "./ServiceHero.astro";

// ServicesSection.astro
---

<ContainerSection id="hero" className="services-container">
  <ServiceHero />

  <ListOfServices />

  <div class="mb-16 md:mb-20">
    <SectionTitle
      text="Por que elegirme?"
      className="mb-10 services-section-title"
    >
      <IconExperience />
    </SectionTitle>
    <div
      class="grid grid-cols-1 md:grid-cols-[repeat(auto-fit,minmax(250px,1fr))] gap-6"
    >
      <div
        class="flex items-start gap-4 p-5 md:p-6 services-benefit-card rounded-lg services-border"
      >
        <div
          class="benefit-icon w-10 h-10 services-icon-bg rounded-md flex items-center justify-center services-icon-color flex-shrink-0"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
            ></path>
          </svg>
        </div>
        <p class="m-0 services-benefit-text leading-normal">
          Trabajo 100% personalizado, adaptado a tu marca
        </p>
      </div>
      <div
        class="flex items-start gap-4 p-5 md:p-6 services-benefit-card rounded-lg services-border"
      >
        <div
          class="benefit-icon w-10 h-10 services-icon-bg rounded-md flex items-center justify-center services-icon-color flex-shrink-0"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path
              d="m22 21-3-3m0 0a5.5 5.5 0 1 0-7.78-7.78 5.5 5.5 0 0 0 7.78 7.78Z"
            ></path>
          </svg>
        </div>
        <p class="m-0 services-benefit-text leading-normal">
          Experiencia con negocios locales y necesidades reales
        </p>
      </div>
      <div
        class="flex items-start gap-4 p-5 md:p-6 services-benefit-card rounded-lg services-border"
      >
        <div
          class="benefit-icon w-10 h-10 services-icon-bg rounded-md flex items-center justify-center services-icon-color flex-shrink-0"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"
            ></path>
            <polyline points="3.27,6.96 12,12.01 20.73,6.96"></polyline>
            <line x1="12" y1="22.08" x2="12" y2="12"></line>
          </svg>
        </div>
        <p class="m-0 services-benefit-text leading-normal">
          Diseño moderno, simple y enfocado en resultados
        </p>
      </div>
      <div
        class="flex items-start gap-4 p-5 md:p-6 services-benefit-card rounded-lg services-border"
      >
        <div
          class="benefit-icon w-10 h-10 services-icon-bg rounded-md flex items-center justify-center services-icon-color flex-shrink-0"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m3 21 1.9-5.7a8.5 8.5 0 1 1 3.8 3.8z"></path>
          </svg>
        </div>
        <p class="m-0 services-benefit-text leading-normal">
          Comunicación clara, sin tecnicismos
        </p>
      </div>
      <div
        class="flex items-start gap-4 p-5 md:p-6 services-benefit-card rounded-lg services-border"
      >
        <div
          class="benefit-icon w-10 h-10 services-icon-bg rounded-md flex items-center justify-center services-icon-color flex-shrink-0"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path>
            <path d="m9 12 2 2 4-4"></path>
          </svg>
        </div>
        <p class="m-0 services-benefit-text leading-normal">
          Mantenimiento y soporte post-entrega
        </p>
      </div>
    </div>
  </div>

  <section class="relative py-10">
    <div
      class="text-center services-cta-card px-6 py-12 md:p-16 rounded-3xl services-border shadow-2xl backdrop-blur-sm"
    >
      <!-- Decorative elements -->
      <div class="absolute inset-0 services-cta-overlay rounded-3xl"></div>
      <div
        class="absolute top-0 left-1/4 w-72 h-72 services-cta-glow-primary rounded-full blur-3xl -translate-y-1/2"
      >
      </div>
      <div
        class="absolute bottom-0 right-1/4 w-72 h-72 services-cta-glow-secondary rounded-full blur-3xl translate-y-1/2"
      >
      </div>

      <!-- Content -->
      <div class="relative z-10">
        <!-- Icon/Image -->
        <div class="mb-8 flex justify-center">
          <div class="relative">
            <div
              class="w-20 h-20 md:w-24 md:h-24 services-cta-icon rounded-2xl flex items-center justify-center shadow-lg"
            >
              <svg
                width="40"
                height="40"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-white"
              >
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="m2 17 10 5 10-5"></path>
                <path d="m2 12 10 5 10-5"></path>
              </svg>
            </div>
            <!-- Glow effect -->
            <div
              class="absolute inset-0 services-cta-icon-glow rounded-2xl blur-xl opacity-30 -z-10"
            >
            </div>
          </div>
        </div>

        <h3
          class="text-3xl md:text-4xl lg:text-5xl font-bold services-cta-title mb-6 leading-tight"
        >
          ¿Tenés un negocio y querés
          <span class="services-cta-highlight">
            llevarlo al siguiente nivel?
          </span>
        </h3>

        <p
          class="text-xl md:text-2xl services-cta-description mb-10 max-w-2xl mx-auto leading-relaxed"
        >
          Hablemos sin compromiso. Contame qué necesitás y te ayudo a hacerlo
          <span class="services-cta-emphasis font-medium">realidad</span>.
        </p>

        <!-- CTA Button -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <a
            href="#contact"
            class="group inline-flex items-center gap-3 bg-secondary text-white text-lg md:text-xl py-4 px-8 md:py-5 md:px-10 rounded-2xl font-semibold transition-all duration-300 ease-out hover:scale-105 hover:shadow-2xl transform"
          >
            Quiero mi sitio web
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-transform duration-300 group-hover:translate-x-1"
            >
              <path d="m9 18 6-6-6-6"></path>
            </svg>
          </a>

          <!-- Secondary CTA -->
          <a
            href="#portfolio"
            class="inline-flex items-center gap-2 services-secondary-cta text-lg font-medium hover:text-white transition-colors duration-200 border-b services-secondary-border hover:border-white pb-1"
          >
            Ver mi trabajo
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M7 17L17 7"></path>
              <path d="M7 7h10v10"></path>
            </svg>
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="mt-12 pt-8 border-t services-trust-border">
          <div class="flex justify-center items-center gap-8 opacity-60">
            <!-- Placeholder for client logos or stats -->
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 services-trust-dot-1 rounded-full"></div>
              <span class="text-sm services-trust-text">100% Satisfacción</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 services-trust-dot-2 rounded-full"></div>
              <span class="text-sm services-trust-text">Entrega rápida</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 services-trust-dot-3 rounded-full"></div>
              <span class="text-sm services-trust-text">Soporte 24/7</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</ContainerSection>

<style>
  :root {
    --color-primary: #e126eb;
    --color-secondary: #77eb26;
    --color-tertiary: #ffd700;
    --color-white: #fafafa;
    --color-gray: #d8d8d8;
    --color-bg: #3a4135;
    --color-gray-bg: #52525252;
    --color-border: #686868;
  }

  .services-container {
    background-color: var(--color-bg);
  }

  .services-section-title {
    color: var(--color-white);
  }

  /* Benefits section */
  .services-benefit-card {
    background-color: var(--color-gray-bg);
  }

  .services-border {
    border: 1px solid var(--color-border);
  }

  .services-icon-bg {
    background-color: var(--color-bg);
  }

  .services-icon-color {
    color: var(--color-secondary);
  }

  .services-benefit-text {
    color: var(--color-gray);
  }

  /* CTA Section */
  .services-cta-card {
    background: linear-gradient(
      135deg,
      var(--color-gray-bg),
      rgba(58, 65, 53, 0.8)
    );
  }

  .services-cta-overlay {
    background: linear-gradient(
      to right,
      rgba(225, 38, 235, 0.05),
      rgba(119, 235, 38, 0.05),
      rgba(255, 215, 0, 0.05)
    );
  }

  .services-cta-glow-primary {
    background-color: var(--color-primary);
    opacity: 0.1;
  }

  .services-cta-glow-secondary {
    background-color: var(--color-secondary);
    opacity: 0.1;
  }

  .services-cta-icon {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
  }

  .services-cta-icon-glow {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
  }

  .services-cta-title {
    color: var(--color-white);
  }

  .services-cta-highlight {
    color: var(--color-primary);
  }

  .services-cta-description {
    color: var(--color-gray);
  }

  .services-cta-emphasis {
    color: var(--color-white);
  }

  .services-cta-button {
    background: linear-gradient(
      to right,
      var(--color-secondary),
      var(--color-primary)
    );
    box-shadow: 0 10px 25px rgba(119, 235, 38, 0.25);
  }

  .services-secondary-cta {
    color: var(--color-white);
  }

  .services-secondary-border {
    border-color: var(--color-border);
  }

  .services-trust-border {
    border-color: var(--color-border);
  }

  .services-trust-text {
    color: var(--color-gray);
  }

  .services-trust-dot-1 {
    background-color: var(--color-secondary);
  }

  .services-trust-dot-2 {
    background-color: var(--color-primary);
  }

  .services-trust-dot-3 {
    background-color: var(--color-tertiary);
  }

  /* Custom animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .float-animation {
    animation: float 6s ease-in-out infinite;
  }
</style>

---
import ContainerSection from "@components/ui/ContainerSection.astro";
import SectionTitle from "@components/ui/SectionTitle.astro";
import Input from "./Input.astro";
import IconContact from "src/icons/IconContact.astro";
---

<ContainerSection id="contact">
  <SectionTitle text="Contacto">
    <IconContact />
  </SectionTitle>
  <form class="flex flex-col gap-4 max-w-2xl mx-auto">
    <div class="flex gap-4">
      <Input name="name" type="text" placeholder="Ingresa tu nombre" />
      <Input name="name" type="text" placeholder="Empresa" />
    </div>
    <Input name="email" type="email" placeholder="Ingresa tu correo" />
    <Input name="asunto" type="text" placeholder="Asunto" />
    <textarea
      placeholder="Mensaje"
      class="border border-[#fff1] min-h-40 bg-gray-bg rounded-2xl py-2 px-4 focus:outline-none focus:ring-2 focus:ring-zinc-600"
    ></textarea>
    <button
      class="bg-primary text-center font-bold text-white py-2 px-4 rounded-2xl"
      >Enviar</button
    >
  </form>
</ContainerSection>

---
import ContainerSection from "./ContainerSection.astro";
import IconCalendar from "./Icons/IconCalendar.astro";
import IconExperience from "./Icons/IconExperience.astro";
import SectionTitle from "./SectionTitle.astro";
import IconRowRigth from "./Icons/IconRowRigth.astro";
---

<ContainerSection>
  <SectionTitle text="Mi experiencia">
    <IconExperience />
  </SectionTitle>
  <div class="border-l-[1px] border-secondary py-12 mt-10 flex flex-col gap-10">
    <div class="relative -left-3 flex gap-2">
      <div class="bg-secondary min-w-6 h-6 rounded-full"></div>
      <div class="flex gap-10">
        <div class="flex flex-col">
          <h3 class="text-white text-2xl font-bold text-center w-max">
            Desarrollador web Frontend
          </h3>
          <p class="text-gray text-xl">Freelancer</p>
          <div class="flex gap-2 text-xs text-gray mt-2">
            <IconCalendar />
            <span>Actualmente...</span>
          </div>
        </div>
        <div class="flex flex-col gap-3">
          <p class="text-gray">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aperiam
            hic, sequi cum aliquam, accusamus dolorum reprehenderit expedita,
            ipsam neque obcaecati earum molestiae exercitationem officia maiores
            delectus laboriosam a adipisci quas.
          </p>
          <a href="/work" class="text-primary font-bold flex items-center">
            <span>Saber mas</span>
            <IconRowRigth />
          </a>
        </div>
      </div>
    </div>

    <div class="relative -left-3 flex gap-2">
      <div class="bg-secondary min-w-6 h-6 rounded-full"></div>
      <div class="flex gap-10">
        <div class="flex flex-col">
          <h3 class="text-white text-2xl font-bold text-center w-max">
            Desarrollador web fullstack
          </h3>
          <p class="text-gray text-xl">Estudiante en practicas</p>
          <div class="flex gap-2 text-xs text-gray mt-2">
            <IconCalendar />
            <span>Marzo 2020 - Diciembre 2023</span>
          </div>
        </div>
        <div class="flex flex-col gap-3">
          <p class="text-gray">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aperiam
            hic, sequi cum aliquam, accusamus dolorum reprehenderit expedita,
            ipsam neque obcaecati earum molestiae exercitationem officia maiores
            delectus laboriosam a adipisci quas.
          </p>
          <a href="/work" class="text-primary font-bold flex items-center">
            <span>Saber mas</span>
            <IconRowRigth />
          </a>
        </div>
      </div>
    </div>
  </div>
</ContainerSection>
